@model FollowTheTask.Models.DataBase.ApplicationRole

@{
    ViewBag.Title = "Удаление роли";
}

<h2>Удаление роли</h2>

<ul class="nav nav-pills">
    <li>@Html.ActionLink("Назад к списку ролей", "Index", "Roles")</li>
    <li>@Html.ActionLink("Редактирование", "Edit", "Roles", new { name = Model.Name }, null)</li>
    <li>@Html.ActionLink("Подробности", "Details", "Roles", new { name = Model.Name }, null)</li>
</ul>

<h3>Вы уверены что хотите удалить эту роль?</h3>
<div class="row">
    <div class="col-md-7">
        <table class="table">
            <tr class="row ">
                <td class="col-md-4">
                    @Html.Label("Название роли", new {@class = "control-label"})
                </td>
                <td class="col-md-8">
                    @Html.DisplayFor(model => model.DisplayName)
                </td>
            </tr>
            <tr class="row">
                <td class="col-md-4">
                    @Html.Label("Имя роли в базе данных", new {@class = "control-label"})
                </td>
                <td class="col-md-8">
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr class="row">
                <td class="col-md-4">
                    @Html.Label("Возможность удаления", new {@class = "control-label"})
                </td>
                <td class="col-md-8">
                    @Html.DisplayFor(model => model.AllowDeletion)
                </td>
            </tr>
            <tr class="row">
                <td class="col-md-4">
                    @Html.Label("Описание роли", new {@class = "control-label"})
                </td>
                <td class="col-md-8">
                    @Html.TextAreaFor(model => model.Description, 10, 50, new {@class = "form-control", disabled = "disabled"})
                </td>
            </tr>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="roleId" value="@Model.Id"/>

            <div class="form-group">
                <input type="submit" value="Удалить роль" class="btn btn-primary col-md-offset-4" />
            </div>
        }
    </div>
</div>
