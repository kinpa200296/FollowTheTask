@model FollowTheTask.Models.ManageAccount.ChangePasswordModel
@{
    ViewBag.Title = "Пользователь " + Model.UserName;
}

<h2>Изменение пароля к аккаунту</h2>

<div class="form-horizontal">
    
    @using (Html.BeginForm("ChangePassword", "ManageAccount", new {username = Model.UserName}, FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.UserName)

        <div class="row form-group">
            <p class="col-md-3">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
            </p>
            <p class="col-md-3">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
            </p>
        </div>
        <div class="row form-group">
            <p class="col-md-3">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            </p>
            <p class="col-md-3">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
            </p>
        </div>
        <div class="row form-group">
            <p class="col-md-3">
                @Html.LabelFor(m => m.PasswordConfirm, new { @class = "control-label" })
            </p>
            <p class="col-md-3">
                @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PasswordConfirm, "", new { @class = "text-danger" })
            </p>
        </div>

        <div class="row form-group">
            <div class="col-md-offset-2">
                <input type="submit" class="btn btn-primary" value="Сменить пароль" />
                @Html.ActionLink("Отмена", "Index", "ManageAccount", new {username = @Model.UserName}, new { @class="btn btn-default" })
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}