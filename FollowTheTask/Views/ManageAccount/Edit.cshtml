@model FollowTheTask.Models.ManageAccount.UserModel
@{
    ViewBag.Title = "Пользователь " + Model.UserName;
}

<h2>Редактирование данных аккаунта</h2>

<div>
    <div class="form-horizontal">
        @using (Html.BeginForm("Edit", "ManageAccount", new {username = Model.UserName}, FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.AntiForgeryToken()
        
            @Html.HiddenFor(m => m.UserName)
        
            <div class="row form-group">
                <p class="col-md-2">
                    @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                </p>
                <p class="col-md-3">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="row form-group">
                <p class="col-md-2">
                    @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                </p>
                <p class="col-md-3">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </p>
            </div>

            <div class="row form-group">
                <div class="col-md-offset-1">
                    <input type="submit" class="btn btn-primary" value="Сохранить изменения"/>
                    @Html.ActionLink("Отмена", "Index", "ManageAccount", new {username = @Model.UserName}, new {@class = "btn btn-default"})
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}