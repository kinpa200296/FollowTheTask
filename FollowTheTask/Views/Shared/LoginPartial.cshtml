@using Microsoft.AspNet.Identity

@if (!Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", null, new {id = "registerLink"})</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", null, new {id = "loginLink"})</li>
    </ul>
}
else
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink(@User.Identity.GetUserName(), "Index", "Manage", null, new {title = "Manage"})</li>
            <li href="javascript:document.getElementById('logoutForm').submit()"><a>Выйти</a></li>
        </ul>
    }
}