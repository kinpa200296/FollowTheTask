@using System
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/themes/base/all.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
    <body>
        @if (IsSectionDefined("Header"))
        {
            @RenderSection("Header")
        }
        else
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Follow The Task", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @if (User.IsInRole("owner") || User.IsInRole("admin"))
                            {
                                <li>@Html.ActionLink("Управление пользователями", "Index", "Users")</li>
                                <li>@Html.ActionLink("Управление ролями", "Index", "Roles")</li>
                            }
                        </ul>
                        @Html.Partial("LoginPartial")
                    </div>
                </div>
            </div>
        }
        <div class="container body-content">
            @RenderBody()
            <hr/>
            @if (IsSectionDefined("Footer"))
            {
                @RenderSection("Footer")
            }
            else
            {
                <footer>
                    <p>
                        &copy; kinpa200296 @DateTime.Now.Year - FollowTheTask
                    </p>
                </footer>
            }
        </div>
    </body>
</html>
