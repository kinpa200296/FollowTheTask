@using System
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/themes/base/all.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.signalR-2.2.0.min.js")
    @Scripts.Render("~/signalr/hubs")
    @Scripts.Render("~/scripts/chat.js")
    @RenderSection("scripts", required: false)
</head>
    <body>
        @if (IsSectionDefined("Header"))
        {
            @RenderSection("Header")
        }
        else
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Follow The Task", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Задачи", "Index", "TrackedTasks")</li>
                            <li>@Html.ActionLink("Менеджеры", "Index", "Managers")</li>
                            <li>@Html.ActionLink("Исполнители", "Index", "Workers")</li>
                            @if (User.IsInRole("manager"))
                            {
                                <li>@Html.ActionLink("Панель менеджера", "TasksIndex", "Managers", 
                                        new{username = User.Identity.Name}, null)</li>
                            }
                            @if (User.IsInRole("worker"))
                            {
                                <li>@Html.ActionLink("Панель исполнителя", "QuestsIndex", "Workers",
                                        new { username = User.Identity.Name }, null)</li>
                            }
                            @if (User.IsInRole("owner") || User.IsInRole("admin"))
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Управление</a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Управление пользователями", "Index", "Users")</li>
                                        <li>@Html.ActionLink("Управление ролями", "Index", "Roles")</li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        @Html.Partial("LoginPartial")
                    </div>
                </div>
            </div>
        }
        @if (Request.IsAuthenticated)
        {
            <div class="chat-block chat-block-collapsed" id="chat">
                <div class="btn-show-chat">
                    <a id="showButton" class="btn btn-primary" 
                       href="javascript:$('#chat').toggleClass('chat-block-collapsed')">Показать чат</a>
                </div>
                <div class="chat-body" id="chatBody">
                    <div class="chat-display row">
                        <div class="chat-room col-md-8">
                            <h4 class="text-center text-info">Сообщения</h4>
                            <div class="chat-window" id="chatRoom"></div>
                        </div>
                        <div class="chat-users col-md-4">
                            <h4 class="text-center text-info">Пользователи</h4>
                            <div class="chat-window" id="chatUsers"></div>
                        </div>
                    </div>
                    <div id="inputForm" class="chat-input row">
                        <input id="hdId" type="hidden" />
                        <input id="username" type="hidden" value="@User.Identity.Name"/>
                        <div class="col-md-8">
                            <textarea class="form-control" id="message" placeholder="Введите сообщение..."></textarea>
                        </div>
                        <input class="btn btn-primary col-md-3" type="button" id="sendmessage" value="Отправить" />
                    </div>
                </div>
            </div>
        }
        <div class="container body-content">
            @RenderBody()
            <hr/>
            @if (IsSectionDefined("Footer"))
            {
                @RenderSection("Footer")
            }
            else
            {
                <footer>
                    <p>
                        &copy; kinpa200296 @DateTime.Now.Year - FollowTheTask
                    </p>
                </footer>
            }
        </div>
    </body>
</html>
