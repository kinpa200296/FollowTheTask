@model FollowTheTask.Models.User.UserModel
@{
    ViewBag.Title = "Просмотр пользователя";
}

<h2>Пользователь @Model.UserName</h2>
<div class="row">
    <div class="col-md-5">
        <table class="table">
            <tr class="row">
                <td class="col-md-6">
                    @Html.LabelFor(m => m.FirstName)
                </td>
                <td class="col-md-6">
                    @Html.DisplayFor(m => m.FirstName)
                </td>
            </tr>
            <tr class="row">
                <td class="col-md-6">
                    @Html.LabelFor(m => m.LastName)
                </td>
                <td class="col-md-6">
                    @Html.DisplayFor(m => m.LastName)
                </td>
            </tr>
        </table>
    </div>
</div>

