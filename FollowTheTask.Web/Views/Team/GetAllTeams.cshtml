@model IEnumerable<FollowTheTask.BLL.Services.Team.ViewModels.TeamInfoViewModel>

@if (Model != null && Model.Count() != 0)
{ 

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leader)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Index", "Team", new {id = item.Id}, new {})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leader)
                </td>
            </tr>
        }

    </table>
}
else
{
    <h3>No teams found in system</h3>
}